{
  "compilerOptions": {
    "target": "ES2020",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "module": "ESNext",
    "moduleResolution": "Node",
    "jsx": "react-jsx",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noEmitOnError": true,
    "strict": true,
    "allowJs": true,
    "noEmit": true,
    "isolatedModules": true,
    "outDir": "dist",
    "declaration": true,
    "declarationDir": "dist/types",
    "types": ["react", "react-dom"],
    "typeRoots": [
      "./node_modules/@types"
    ]
  },
  "include": [
    "./packages/core/src"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}